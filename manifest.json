    "icons": {
        "16": "./logo/logo-16.png",
        "48": "./logo/logo-48.png",
        "128": "./logo/logo-128.png"
    },
    "action": {
        "default_title": "Login for sabertechs freelancers",
        "default_popup": "./popup.html"
